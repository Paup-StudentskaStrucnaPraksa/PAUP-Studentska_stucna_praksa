@model Praksa.Models.Poduzeca

@{
    Layout = "~/Views/Shared/_mylajout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Predloži poduzeće</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="center">
            <div class="form-horizontal">
                <h4>Predloži poduzeće</h4>
                <hr />
                <p>Polja sa * su obavezna</p>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.nazivPoduzeca, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EditorFor(model => model.nazivPoduzeca, new { htmlAttributes = new { @class = "form-control" } }) *
                    </div>
                </div>

                <div class="control-label col-md-2">
                    @Html.LabelFor(model => model.adresa, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.adresa, new { htmlAttributes = new { @class = "form-control" } }) *
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.mail, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control" } }) *
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.url, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="margin-right:5px">
                        @Html.EditorFor(model => model.url, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.telefon, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.telefon, new { htmlAttributes = new { @class = "form-control" } }) *
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.faks, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="margin-right:5px">
                        @Html.EditorFor(model => model.faks, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.odgovornaOsoba, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.odgovornaOsoba, new { htmlAttributes = new { @class = "form-control" } }) *
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.opisPoduzeca, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="margin-right:5px">
                        @Html.EditorFor(model => model.opisPoduzeca, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" style="margin-top:5px">
                        <input type="submit" value="Predloži" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
            
    }
    <div class="center">
        @Html.ActionLink("Natrag", "Index")
    </div>
</body>
</html>
