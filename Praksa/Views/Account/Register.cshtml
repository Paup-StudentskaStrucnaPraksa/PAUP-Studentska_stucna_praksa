                <div class="form-group">
                    @Html.LabelFor(model => model.smjerStudija, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.smjerStudija, new SelectList(Enum.GetValues(typeof(SmjerStudija))), "Odaberi smjer")
                    </div>
                    <div class="col-md-10">
                        @Html.ValidationMessageFor(model => model.smjerStudija, "", new { @class = "text-danger" })
