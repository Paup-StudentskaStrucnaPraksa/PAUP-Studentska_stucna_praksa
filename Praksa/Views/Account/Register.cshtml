                    </div>
                    <div class="col-md-10">
                        @Html.ValidationMessageFor(model => model.lozinka, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Registriraj" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
</body>
</html>
